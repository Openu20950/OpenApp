<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_review"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.openu.a2017_app1.screens.PostReviewActivity">

    <EditText
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:inputType="textPersonName"
        android:text="Description"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:id="@+id/DescriptionEditText"
        android:textAlignment="center"
        android:layout_below="@+id/TitleEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:id="@+id/PostButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/DescriptionEditText"
        android:layout_alignEnd="@+id/DescriptionEditText"
        android:onClick="btnPostClicked (PostReviewActivity)" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:id="@+id/TitleEditText"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add Photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddPhotoButton"
        android:layout_above="@+id/PostButton"
        android:layout_alignLeft="@+id/DescriptionEditText"
        android:layout_alignStart="@+id/DescriptionEditText"
        android:layout_marginBottom="23dp"
        android:onClick="btnTakePhotoClicked (PostReviewActivity)" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgReviewPhoto"
        android:layout_alignTop="@+id/AddPhotoButton"
        android:layout_alignRight="@+id/TitleEditText"
        android:layout_alignEnd="@+id/TitleEditText"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp" />
</RelativeLayout>
